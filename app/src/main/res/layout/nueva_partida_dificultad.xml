<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nuevaPartidaDificultad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaPartidaDificultad">

    <ImageView
        android:id="@+id/logoMini"
        android:layout_width="238dp"
        android:layout_height="170dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="616dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_sudoku_mini" />

    <ImageView
        android:id="@+id/botonAtras"
        android:layout_width="33dp"
        android:layout_height="38dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="338dp"
        android:layout_marginBottom="724dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton_atras" />

    <TextView
        android:id="@+id/textoPuntuacionesSeleccion"
        android:layout_width="329dp"
        android:layout_height="82dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="470dp"
        android:fontFamily="@font/poppins"
        android:text="Selecciona la dificultad de juego:"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textoExplicacionPuntuaciones"
        android:layout_width="329dp"
        android:layout_height="82dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="357dp"
        android:fontFamily="@font/poppins"
        android:text="En funciÃ³n de la dificultad seleccionda, se aplican cambios a pistas y ayudas."
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="203dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="508dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="139dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/botonDificultadFacil"
            android:layout_width="301dp"
            android:layout_height="67dp"
            android:backgroundTint="#A377F6"
            android:fontFamily="@font/poppins"
            android:onClick="dificultadFacil"
            android:text="Facil"
            android:textAlignment="center"
            android:textSize="24sp"
            app:cornerRadius="5dp"
            app:strokeColor="#7E40F3"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/botonDificultadMedia"
            android:layout_width="301dp"
            android:layout_height="67dp"
            android:backgroundTint="#A377F6"
            android:fontFamily="@font/poppins"
            android:onClick="dificultadMedia"
            android:text="Media"
            android:textAlignment="center"
            android:textSize="24sp"
            app:cornerRadius="5dp"
            app:strokeColor="#7E40F3"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/botonDificultadDificil"
            android:layout_width="301dp"
            android:layout_height="67dp"
            android:backgroundTint="#A377F6"
            android:fontFamily="@font/poppins"
            android:onClick="dificultadDificil"
            android:text="Dificil"
            android:textAlignment="center"
            android:textSize="24sp"
            app:cornerRadius="5dp"
            app:strokeColor="#7E40F3"
            app:strokeWidth="1dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>