<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nuevaPartidaNombre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaPartidaNombre">

    <ImageView
        android:id="@+id/logoMini"
        android:layout_width="238dp"
        android:layout_height="170dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="616dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_sudoku_mini" />

    <ImageView
        android:id="@+id/botonAtras"
        android:layout_width="33dp"
        android:layout_height="38dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="338dp"
        android:layout_marginBottom="724dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/boton_atras" />

    <TextView
        android:id="@+id/textoPuntuacionesSeleccion"
        android:layout_width="329dp"
        android:layout_height="82dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="470dp"
        android:fontFamily="@font/poppins"
        android:text="Introduce tu nombre de jugador:"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="334dp"
        android:layout_height="62dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="408dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="381dp"
        app:boxStrokeColor="#7E40F3"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textoExplicacionPuntuaciones"
        android:layout_width="329dp"
        android:layout_height="82dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="506dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="263dp"
        android:fontFamily="@font/poppins"
        android:text="El nombre que introducido es el que se mostrarÃ¡ en la tabla de resultados una vez finalice la partida."
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonDificultadFacil"
        android:layout_width="301dp"
        android:layout_height="67dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="634dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#A377F6"
        android:fontFamily="@font/poppins"
        android:onClick="siguiente"
        android:text="Siguiente"
        android:textAlignment="center"
        android:textSize="24sp"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#7E40F3"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>